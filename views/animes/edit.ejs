<form 

action="/animes/update/<%- anime._id %>" 
method="POST"
>
    <label>Title:</label>
    <input type="text" name="title" value="<%=anime.title %>">
    <label>Release Year:</label>
    <input type="text" name="releaseYear" value="<%=anime.releaseYear %>">
    <label>Status</label>
    <select name="status">
      <option value="Watching">Watching</option>
      <option value="Seen it">Seen it</option>
      <option value="Not Start">Not Start</option>
      <option value="Skip it">Skip it</option>
    </select>
  <button type="submit">update</button>
</form>